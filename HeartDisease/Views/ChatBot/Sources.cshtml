@{
    ViewData["Title"] = "Sources";
}

<div class="container-fluid h-100 d-flex flex-column">
    @Html.Partial("~/Views/Shared/Partials/_AdminNavbar.cshtml")
    <div class="row flex-grow-1">
        <!-- Sidebar -->
        <div class="col-md-3 d-flex flex-column p-0">
            @Html.Partial("~/Views/Shared/Partials/_Sidebar.cshtml")
        </div>

        <!-- Main content area -->
        <div class="col-md-9 d-flex justify-content-center align-items-center">
            <div class="w-100 d-flex justify-content-center align-items-center flex-column">
                <div class="container text-center">
                    <h2 class="mb-4">Sources</h2>

                    <form asp-controller="Admin" asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-4">
                        <div class="card shadow-sm p-4">
                            <div class="form-group mb-3">
                                <label for="file" class="form-label">Upload File:</label>
                                <input type="file" name="file" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </form>

                    <div class="card shadow-sm p-4 mb-4">
                        <h4 class="mb-3">Uploaded Files</h4>
                        <ul class="list-group">
                            <!-- Example list item -->
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>File1.pdf</span>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </li>
                            <!-- Add dynamic list items here -->
                        </ul>
                    </div>

                    <button class="btn btn-success btn-lg">Train Chatbot</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #333;
    }

    .card {
        border: none;
        border-radius: 8px;
    }

        .card h4 {
            color: #555;
        }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #ddd;
    }

    .btn {
        border-radius: 50px;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>
