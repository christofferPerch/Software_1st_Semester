@model IEnumerable<HeartDisease.Models.Webshop.Product>

@{
    ViewBag.Title = "All Products";
}

<h2 class="text-center mt-4">@ViewBag.Title</h2>

<style>
    body {
        background-color: #f8f9fa;
    }

    .product-container {
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 0px #0000001a;
        margin-top: 30px;
        max-width: 90%;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .product-item {
        width: 30%;
        margin-bottom: 20px;
        padding: 20px;
        background: #f0f0f0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

        .product-item img {
            width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .product-item h3 {
            font-size: 20px;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>

<div class="container product-container">
    @foreach (var product in Model) {
        <div class="product-item">
            <img src="@product.ImageURL" alt="Image of @product.ProductName">
            <h3>@product.ProductName</h3>
            <p>@product.Description</p>
            <p><strong>Price:</strong> @product.Price.ToString("C")</p>
            <a href="@Url.Action("ProductDetails", "Webshop", new { id = product.ProductID })" class="btn btn-primary">View Details</a>
        </div>
    }
</div>

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
