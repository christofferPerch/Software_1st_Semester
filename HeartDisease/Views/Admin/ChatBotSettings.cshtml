@{
    ViewData["Title"] = "Chat Bot Settings";
}

@Html.Partial("_AdminNavBar")

<div class="knowledge-base-container container my-5">
    <h2 class="mb-4 text-center">Chat Bot Settings</h2>

    <div class="card shadow-sm p-4 mb-4 border">
        <h4 class="mb-3">Last Trained</h4>
        <p class="text-muted">The chatbot was last trained on: @DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt")</p>
    </div>

    <form asp-controller="Admin" asp-action="SaveChatBotSettings" method="post">
        <div class="card shadow-sm p-4 mb-4 border">
            <div class="form-group mb-3">
                <label for="initialMessage" class="form-label fw-bold">Initial Message:</label>
                <input type="text" name="initialMessage" id="initialMessage" class="form-control" placeholder="Enter the initial message" />
            </div>

            <div class="form-group mb-3">
                <label for="basePrompt" class="form-label fw-bold">Base Prompt:</label>
                <textarea name="basePrompt" id="basePrompt" class="form-control" rows="3" placeholder="Enter the base prompt"></textarea>
            </div>

            <div class="form-group mb-3">
                <label for="model" class="form-label fw-bold">Model:</label>
                <select name="model" id="model" class="form-select">
                    <option value="gpt-4">GPT-4</option>
                    <option value="gpt-3.5">GPT-3.5</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="temperature" class="form-label fw-bold">Temperature:</label>
                <input type="range" name="temperature" id="temperature" class="form-range" min="0" max="1" step="0.1" value="0.7" />
                <div class="d-flex justify-content-between">
                    <span>0.0</span>
                    <span>1.0</span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Save Settings</button>
        </div>
    </form>
</div>

<style>
    /* Custom styles for the Chat Bot Settings page */
    .knowledge-base-container {
        max-width: 800px;
        margin: auto;
    }

        .knowledge-base-container .card {
            border: 1px solid #ddd; /* Small border for containers */
            border-radius: 0.5rem;
        }

            .knowledge-base-container .card h4 {
                font-weight: 600;
            }

        .knowledge-base-container .form-label.fw-bold {
            font-weight: bold;
        }

        .knowledge-base-container .form-range {
            margin-top: 1rem;
        }

            .knowledge-base-container .form-range + .d-flex {
                margin-top: -0.5rem;
            }
</style>
